<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <android.support.v4.view.ViewPager
       android:id="@+id/vp_guide"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent" >
    </android.support.v4.view.ViewPager>
	
    <Button
        android:clickable="true"
        android:id="@+id/btn_start_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dip"
        android:text="@string/guide_button_text"
        android:textSize="20sp"
        android:background="@drawable/guide_button_bg"
        android:textColor="@drawable/guide_text_color" 
        android:visibility="gone"/>
    
   		<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip" >

        <LinearLayout
            android:id="@+id/ll_guide_point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
		
        <View
            android:id="@+id/view_guide_dot_move"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/guide_dot_move" />

    </RelativeLayout>
  
</RelativeLayout>
